<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cmru.kulachart.cmrurun.MainActivity"
    android:background="@drawable/bg7">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:onClick="clickSignIn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/singup"
            android:id="@+id/button"
            android:layout_weight="1"
            android:onClick="clickSignUpMain" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:background="#820b0b0b">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="189dp"
            android:id="@+id/imageView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CMRU run"
            android:id="@+id/textView6"
            android:textSize="@dimen/h1"
            android:textColor="@color/abc_background_cache_hint_selector_material_light" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"
            android:hint="User :"
            android:inputType="text"
            android:textColorHint="@color/background_material_light" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText5"
            android:hint="Password :"
            android:inputType="textPassword"
            android:textColorHint="@color/background_floating_material_light" />
    </LinearLayout>
</RelativeLayout>
